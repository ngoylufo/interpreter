{
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts"],
	"compilerOptions": {
		"lib": ["es2022"],
		"target": "es2022",
		"baseUrl": ".",
		"rootDir": "src",
		"typeRoots": ["./node_modules/@types", "./src/ambient.d.ts"],
		"paths": {
			"$utils": ["src/utils/utils.ts"],
			"$cli": ["src/utils/cli.ts"],
			"$channels": ["src/utils/channels.ts"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"stripInternal": true,
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"downlevelIteration": true,
		"noFallthroughCasesInSwitch": true
	}
}
